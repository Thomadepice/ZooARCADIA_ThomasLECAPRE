{% extends 'base.html.twig' %}

{% block title %}Note Index{% endblock %}

{% block body %}
    <h1>Notes</h1>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Date</th>
                <th>Habitat</th>
                <th>Note</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for note in notes %}
                <tr>
                    <td>{{ note.id }}</td>
                    <td>{{ note.date|date('Y-m-d') }}</td>
                    <td>{{ note.habitat }}</td>
                    <td>{{ note.content }}</td>
                    <td>
                        <a href="{{ path('note_show', {'id': note.id}) }}">show</a>
                        <a href="{{ path('note_edit', {'id': note.id}) }}">edit</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('note_new') }}">Create new</a>
{% endblock %}
