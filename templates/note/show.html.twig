{% extends 'base.html.twig' %}

{% block title %}Note{% endblock %}

{% block body %}
    <h1>Note</h1>
    <table>
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ note.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ note.date|date('Y-m-d') }}</td>
            </tr>
            <tr>
                <th>Habitat</th>
                <td>{{ note.habitat }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ note.content }}</td>
            </tr>
        </tbody>
    </table>
    <a href="{{ path('note_index') }}">back to list</a>
    <a href="{{ path('note_edit', {'id': note.id}) }}">edit</a>
{% endblock %}
